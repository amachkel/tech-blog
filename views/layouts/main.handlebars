<html lang='en'>

<head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Tech Blog</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/3c06b4aef0.js" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css' />
    <link rel='stylesheet' href='/css/style.css' />
<link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
<link rel="manifest" href="/assets/site.webmanifest">
</head>

<body>

<nav class="navbar is-spaced" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start is-size-4">
            <a href='/' class="navbar-item">
                Home
            </a>

            <a href='/dashboard' class="navbar-item">
                Dashboard
            </a>
            {{#if logged_in}}
            <a href='/new' class="navbar-item">new post</a>
            {{/if}}
        </div>
    </div>
    <div class="navbar-end">
        <div class="navbar-item">
            <div class="buttons are-medium">
                <!-- Conditionally render login or logout links -->
                {{#if logged_in}}

                <a id='logout'class="button is-primary">
                    <strong>Log Out</strong>
                </a>
                {{else}}
                <a href='/signup' class="button is-primary">
                    <strong>Sign up</strong>
                </a>
                <a href='/login' class="button is-light">
                    Log in
                </a>
                {{/if}}
            </div>
        </div>
    </div>
    </div>
</nav>
<section class="hero">
    <div class="hero-body has-text-centered">
        <p class="title has-text-white is-size-1">
            Tech Blog
        </p>
    </div>
</section>
<main class='container full-size container-fluid mt-5'>
    <!-- Render the sub layout -->
    {{{body}}}
</main>
<footer>
 <div class="content has-text-centered">
    <p>
      <a href="https://bulma.io">
  <img
    src="https://bulma.io/images/made-with-bulma.png"
    alt="Made with Bulma"
    width="128"
    height="24">
    </p>
    <a href="https://www.flaticon.com/free-icons/blog" class="is-size-7" title="blog icons">Blog icons created by Freepik - Flaticon</a>
</a>
  </div>
</footer>


<!-- Render script for logged in users only -->
{{#if logged_in}}
<script src='/js/logout.js'></script>
{{/if}}
<script src='/js/navburger.js'></script>
</body>

</html>