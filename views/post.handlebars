<div class='container'>
  <div class='card'>
    <header class='card-header'>
      <p class='card-header-title'>
        {{title}}
      </p>
    </header>
    <div class='card-content'>
      <div class='content'>
        <p>{{content}}</p>
        <p>Posted by {{user.name}} on {{format_date date_created}}</p>
      </div>
    </div>
    <footer class='card-footer'>
      <a href='#' class='card-footer-item'>Edit</a>
      <a href='#' class='card-footer-item'>
        <span class='icon'>
          <i class='fal fa-trash-alt'></i>
        </span></a>
    </footer>
  </div>

    {{#each comments as |comment|}}
      <div class='card'>
        <div class='card-content'>
          <div class='content'>
            <p>{{comment.content}}</p>
            <p>Posted by {{comment.user.name}} on {{format_date comment.date_created}}</p>
          </div>
        </div>
        <footer class='card-footer'>
          <a href='#' class='card-footer-item'>Submit</a>
          <a href='#' class='card-footer-item'>Edit</a>
          <a href='#' class='card-footer-item'>Delete</a>
        </footer>
      </div>
    {{/each}}
  </div>
  <form class='column is-half is-offset-one-quarter box new-comment-form p-4'>
 <div class='field'>
   <input type="text" id='post-id' value={{id}} hidden='hidden'/>
      <textarea
        class='textarea'
        id='comment-content'
        name="content"
        placeholder='Add a comment'
      ></textarea>
    </div>
 <div class='field'>
      <p class='control'>
        <button class='button is-primary' type='submit'>
          Create
        </button>
      </p>
    </div>
  </form>
</div>
<script src='/js/comment.js'></script>