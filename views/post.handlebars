<div class='col-md-9'>
  <div class='card'>
    <header class='card-header'>
      <p class='card-header-title'>
        {{title}}
      </p>
    </header>
    <div class='card-content'>
      <div class='content'>
        <p>{{content}}</p>
        <p>Posted by {{user.name}} on {{format_date date_created}}</p>
      </div>
    </div>
    <footer class='card-footer'>
      <a href='#' class='card-footer-item'>Edit</a>
      <a href='#' class='card-footer-item'>
        <span class='icon'>
          <i class='fal fa-trash-alt'></i>
        </span></a>
    </footer>
  </div>
  <div class='col-md-9 comment-list'>
    <h3>Comments</h3>

    {{#each comments as |comment|}}
      <div class='card'>
        <div class='card-content'>
          <div class='content'>
            <p>{{content}}</p>
            <p>Posted by {{user.name}} on {{format_date date_created}}</p>
          </div>
        </div>
        <footer class='card-footer'>
          <a href='#' class='card-footer-item'>Submit</a>
          <a href='#' class='card-footer-item'>Edit</a>
          <a href='#' class='card-footer-item'>Delete</a>
        </footer>
      </div>
    {{/each}}
  </div>
  <form class='form new-comment-form'>
    <div class='form-group'>
      <label for='comment-content'>Add a Comment:</label>
      <textarea
        class='form-input'
        id='comment-content'
        name='content'
      ></textarea>
    </div>
    <div class='form-group'>
      <button type='submit' class='btn btn-custom'>Create</button>
    </div>
  </form>
</div>
<script src='/js/comment.js'></script>