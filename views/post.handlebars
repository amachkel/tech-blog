<div class='container'>
  <div class='card'>
    <header class='card-header has-background-light'>
      <p class='card-header-title is-size-3 has-text-weight-bold'>
        {{title}}
      </p>
    </header>
    <div class='card-content'>
      <div class='content'>
        <p class="has-text-weight-bold">{{content}}</p>
        <footer class='card-footer'>
        <p>Posted by {{user.name}} on {{format_date date_created}}</p>
        </footer>
      </div>
    </div>
  </div>

    {{#each comments as |comment|}}
      <div class='card'>
        <div class='card-content'>
          <div class='content'>
            <p>{{comment.content}}</p>
            
          </div>
        </div>
        <footer class='card-footer'>
          <p class="pl-5">Posted by {{comment.user.name}} on {{format_date comment.date_created}}</p>
        </footer>
      </div>
    {{/each}}
  </div>
  <form class='column card is-half is-offset-one-quarter box new-comment-form p-4'>
 <div class='field'>
   <input type="text" id='post-id' value={{id}} hidden='hidden'/>
      <textarea
        class='textarea'
        id='comment-content'
        name="content"
        placeholder='Add a comment'
      ></textarea>
    </div>
 <div class='field'>
      <p class='control'>
        <button class='button is-primary' type='submit'>
          Create
        </button>
      </p>
    </div>
  </form>
</div>
<script src='/js/comment.js'></script>