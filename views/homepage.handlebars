<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class='row mb-4 project'>
    <div class='col-md-5'>
      <div class='card card-wrapper'>
        <h2>
          <a href='/post/{{post.id}}'>{{post.title}}</a>
        </h2>
      </div>
      <div class='col-md-7'>
        {{!-- <p>
        {{post.content}}
      </p> --}}
        <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
      </div>
    </div>
  </div>
{{/each}}